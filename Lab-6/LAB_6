#include <stdio.h>
#include <stdlib.h>

int* GetMatrix( int *row, int *col ) {
    int i;
    int *arr;

    printf("Enter number of rows : ");
    scanf("%d", row);

    printf("Enter number of columns : ");
    scanf("%d", col);

    arr = (int*)malloc( (*row) * (*col) * sizeof(int) );

    if(arr == NULL){
        printf("Memory allocation failed\n");
        exit(1);
    }

    printf("Enter matrix values:\n");
    for(i = 0; i < (*row) * (*col); i++){
        printf("value[%d] = ", i);
        scanf("%d", &arr[i]);
    }

    return arr;
}

int main() {
    int *data, m, n;
    data = GetMatrix( &m, &n );

    printf("\nMatrix received (%d x %d):\n", m, n);

    for(int i=0; i<m; i++){
        for(int j=0; j<n; j++){
            printf("%d ", data[i*n + j]);
        }
        printf("\n");
    }

    free(data);
    return 0;
}
