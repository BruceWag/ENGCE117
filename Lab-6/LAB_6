#include <stdio.h>
#include <stdlib.h>

int* GetMatrix(int *row, int *col) {
    int i, j;
    int *arr;

    printf("Enter number of rows: ");
    scanf("%d", row);

    printf("Enter number of columns: ");
    scanf("%d", col);

    arr = (int*)malloc((*row) * (*col) * sizeof(int));

    printf("Enter matrix values:\n");
    for (i = 0; i < *row; i++) {
        for (j = 0; j < *col; j++) {
            scanf("%d", &arr[i * (*col) + j]);
        }
    }

    return arr;
}

int main() {
    int *data;
    int m, n;
    int i, j;

    data = GetMatrix(&m, &n);

    printf("\nMatrix you entered:\n");
    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) {
            printf("%d ", data[i * n + j]);
        }
        printf("\n");
    }

    free(data);

    return 0;
}
