#include <stdio.h>
#include <stdlib.h>

int* GetMatrix(int *row, int *col) {
    int total;
    int *matrix = NULL;

    printf("Enter number of rows: ");
    if (scanf("%d", row) != 1 || *row <= 0) {
        printf("Invalid row size.\n");
        return NULL;
    }

    printf("Enter number of columns: ");
    if (scanf("%d", col) != 1 || *col <= 0) {
        printf("Invalid column size.\n");
        return NULL;
    }

    total = (*row) * (*col);

    matrix = (int*)malloc(total * sizeof(int));
    if (matrix == NULL) {
        printf("Memory allocation failed.\n");
        return NULL;
    }

    printf("Enter matrix values:\n");
    for (int i = 0; i < total; i++) {
        printf("Value[%d]: ", i);
        if (scanf("%d", &matrix[i]) != 1) {
            printf("Invalid input detected.\n");
            free(matrix);
            return NULL;
        }
    }

    return matrix;
}

int main() {
    int *data = NULL;
    int m, n;

    data = GetMatrix(&m, &n);

    if (data == NULL) {
        printf("Error: Matrix data not available.\n");
        return 1;
    }

    printf("\nMatrix (%d x %d):\n", m, n);
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            printf("%d ", data[i * n + j]);
        }
        printf("\n");
    }

    free(data);
    return 0;
}
