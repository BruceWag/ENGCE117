#include <stdio.h>
#include <stdlib.h>

void GetMatrix(int value[], int *row, int *col) {
    int i, j;

    printf("Enter number of rows: ");
    scanf("%d", row);

    printf("Enter number of columns: ");
    scanf("%d", col);

    printf("Enter matrix values:\n");
    for (i = 0; i < *row; i++) {
        for (j = 0; j < *col; j++) {
            scanf("%d", &value[i * (*col) + j]);
        }
    }
}

int main() {
    int *data;
    int m, n;

    printf("Enter number of rows: ");
    scanf("%d", &m);

    printf("Enter number of columns: ");
    scanf("%d", &n);

    data = (int *)malloc(m * n * sizeof(int));

    GetMatrix(data, &m, &n);

    printf("\nMatrix:\n");
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            printf("%d ", data[i * n + j]);
        }
        printf("\n");
    }

    free(data);

    return 0;
}
