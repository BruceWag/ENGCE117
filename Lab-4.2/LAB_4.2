
#include <stdio.h>
#include <stdlib.h>

void go( int ***p, int **z ) {
    *p = z;
}

int main() {
    int *b = malloc(sizeof(int));
    int *c = malloc(sizeof(int));
    *b = 10;
    *c = 20;

    int **a;

    go( &a, &b );
    printf( "%d %p %p %p\n", **a, *a, a, &a );

    go( &a, &c );
    printf( "%d %p %p %p\n", **a, *a, a, &a );

    free(b);
    free(c);
    return 0;
}
