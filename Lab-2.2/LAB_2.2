#include <stdio.h>
#include <stdlib.h>

char* reverse( char str1[] ) {
    int length = 0;
    char *result;

    while (str1[length] != '\0') {
        length++;
    }

    result = (char *)malloc((length + 1) * sizeof(char));
    if (result == NULL) {
        return NULL;
    }

    for (int i = 0; i < length; i++) {
        result[i] = str1[length - 1 - i];
    }

    result[length] = '\0';

    return result;
}

int main() {
    char text[50] = "I Love You";
    char *out;

    out = reverse(text);

    if (out != NULL) {
        printf("%s\n", out);  
        free(out);             
    }

    return 0;
}
